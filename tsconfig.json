{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@root/*": ["./*"],
      "@constants/*": ["./constants/*"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@presets/*": ["./presets/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
