{
  "name": "@cenk1cenk2/renovate-config",
  "version": "1.0.0-development",
  "description": "Self-hosted instance of Renovate to update GitHub Actions workflows.",
  "author": "Cenk Kilic, Jeroen de Bruijn, Scale Leap",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/cenk1cenk2/renovate",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:start": "NODE_ENV=develop yarn start",
    "lint": "prettier --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./src/*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "config": "^3.3.1",
    "figures": "^3.2.0",
    "fs-extra": "^9.0.1",
    "pkg-dir": "^4.2.0",
    "renovate": "^21.33.6",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/figures": "^3.0.1",
    "@types/fs-extra": "^9.0.1",
    "@cenk1cenk2/eslint-config": "^0.3.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.5.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "base": {
      "extends": [
        "config:base",
        ":masterIssue"
      ],
      "ignorePresets": [
        ":prHourlyLimit2"
      ],
      "timezone": "Europe/Vienna",
      "semanticCommits": true,
      "rangeStrategy": "update-lockfile",
      "assignees": [
        "cenk1cenk2cenk3@gmail.com"
      ],
      "labels": [
        "deps"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": [
          "before 1am"
        ]
      },
      "major": {
        "stabilityDays": 3
      },
      "schedule": [
        "before 1am"
      ],
      "prCreation": "immediate"
    },
    "default": {
      "extends": [
        "@cenk1cenk2:base",
        "@cenk1cenk2:devDependencies",
        "@cenk1cenk2:minorDependencies",
        "@cenk1cenk2:groupTogether",
        "@cenk1cenk2:monthly"
      ]
    },
    "devDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true,
          "commitMessageSuffix": "[skip ci]",
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "groupTogether": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "depTypeList": [
            "devDependencies",
            "peerDependencies"
          ],
          "groupName": "all development packages",
          "groupSlug": "all-dev"
        },
        {
          "packagePatterns": [
            "*"
          ],
          "depTypeList": [
            "dependencies"
          ],
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "groupName": "all minor package updates",
          "groupSlug": "all"
        }
      ]
    },
    "minorDependencies": {
      "packageRules": [
        {
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "automerge": true
        }
      ]
    },
    "monthly": {
      "packageRules": [
        {
          "packagePatterns": [
            "^@typescript-eslint/",
            "jest"
          ],
          "schedule": [
            "before 1am on Monday"
          ]
        },
        {
          "packageNames": [
            "@types/node",
            "eslint",
            "husky",
            "prettier",
            "lint-staged",
            "cz-conventional-changelog"
          ],
          "schedule": [
            "before 1am on Monday"
          ]
        },
        {
          "packageNames": [
            "node"
          ],
          "enabled": false
        }
      ]
    }
  }
}