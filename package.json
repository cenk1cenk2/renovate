{
  "name": "@cenk1cenk2/renovate-config",
  "version": "1.0.0-development",
  "description": "Self-hosted instance of Renovate to update GitHub Actions workflows.",
  "author": "Cenk Kilic, Jeroen de Bruijn",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/cenk1cenk2/renovate",
  "private": false,
  "scripts": {
    "lint": "prettier --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./src/*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@cenk1cenk2/eslint-config": "*",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.5.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
