{
  "name": "@cenk1cenk2/github-renovate",
  "version": "1.0.0",
  "description": "Self-hosted instance of Renovate to update GitHub Actions workflows.",
  "private": true,
  "author": "Cenk Kilic, Jeroen de Bruijn",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/cenk1cenk2/renovate",
  "scripts": {
    "lint": "prettier --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "prettier --check ./ && eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "eslint": "7.5.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  }
}
